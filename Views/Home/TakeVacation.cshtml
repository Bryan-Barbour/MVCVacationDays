@model VacationDays.Models.EmployeeModel

@{
    ViewData["Title"] = "DaysWorked";
}

<h1>Take Vacation For Employee </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <p>Current amount of vacation days: @Model.VacationDays</p>
        <form asp-action="TakeVacation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="TimeTakingOff" class="control-label">Vacation Days</label>
                <input asp-for="TimeTakingOff" class="form-control"/>
                <span asp-validation-for="TimeTakingOff" class="text-danger"></span>
            </div>
            <div/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div/>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}